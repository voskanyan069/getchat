<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context=".SettingsActivity">

    <TextView
        android:id="@+id/settings_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:text="Settings"
        android:textColor="@color/colorText_dark"
        android:fontFamily="@font/righteous"
        android:textSize="45sp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/settings_text"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="50sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:textSize="30sp"
            android:textColor="@color/colorText_dark"
            android:fontFamily="@font/righteous"
            android:text="Primary Creator:"/>

        <TextView
            android:id="@+id/setting_grp_info_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:textSize="20sp"
            android:textColor="@color/colorText_dark"
            android:fontFamily="@font/righteous"
            android:text="Andranik Voskanyan\nandranik.voskanyan.gp@gmail.com"/>

    </LinearLayout>
</RelativeLayout>
